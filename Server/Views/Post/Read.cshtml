@using System.Security.Claims
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model PostViewModel?

@{
    bool isValid = Model != null;
    bool isLogon = User.Identity?.IsAuthenticated ?? false;
    string? logonUsername = Context.User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.NameIdentifier)?.Value;
    bool isByUser = isValid && isLogon && Model!.AuthorName == logonUsername;
    
    string pushChinese = ViewBag.PushChinese;
    string booChinese = ViewBag.BooChinese;
    string naturalChinese = ViewBag.NaturalChinese;
}

<!DOCTYPE html>

<html lang="zh-tw">
<head>
    <title>閱讀文章</title>
</head>
<body>
<div>
    <div style="display: flex; justify-content: space-between">
        <form method="get">
            <button type="submit" asp-action="Index" asp-controller="Home">回首頁</button>
        </form>
        @if (isByUser)
        {
            <form asp-controller="Post" method="post">
                @Html.HiddenFor(model => model!.Id)
                <button type="submit" asp-action="EditPost">修改文章</button>
                <button type="submit" asp-action="DeletePostConfirmation">刪除文章</button>
            </form>
        }
    </div>
    <hr/>
    @if (!isValid)
    {
        <h5>查無內容，文章可能已被刪除 ...</h5>
        return;
    }
    
    <h2 class="post-title" legend>@Model!.Title</h2>
    <p class="post-info">作者：@(Model.AuthorName)</p>
    <br/><p class="post-info">發表時間：@(Model.CreatedTime)</p>
    @if (Model.UpdatedTime != null)
    {
        <br/><p class="post-info">最後修改時間：@(Model.UpdatedTime)</p>
    }
    <hr/>
    <h5>@Model.Content</h5>
    <hr/>
    @if (isLogon)
    {
        <div class="comment-input" style="display: inline-flex">
            <form asp-controller="Comment" method="post">
                @Html.HiddenFor(m => m!.Id)
                <input type="text" asp-for="CommentContent" size="140" minlength="1" maxlength="100" placeholder="輸入推文內容（1 ~ 100 字）..."/><br/>
                @if (!isByUser)
                {
                    // 自己的文章只允許箭頭
                    <button class="button-cyan" type="submit" asp-action="Push" asp-controller="Comment">@pushChinese</button>
                    <button class="button-red" type="submit" asp-action="Boo" asp-controller="Comment">@booChinese</button>
                }
                <button class="button-yellow" type="submit" asp-action="Natural" asp-controller="Comment">@naturalChinese</button>
            </form>
        </div>
    }
    <hr/>
</div>
</body>
</html>